<h1>All Courses</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Hours</th>

      </tr>
    </thead>
    <tbody>

      <tr>
        <th scope="row"><%= @course.id %></th>
        <td><%= @course.name %></td>
        <td><%= @course.hours %></td>
        <td class="btn btn-dark"><%= link_to "Edit Course", edit_course_path(@course) %></td>
        <td class="btn btn-danger"><%= link_to 'Annihilate', @course, method: :delete, data: { confirm: 'FoSho?' } %></td>
      </tr>

      <tr>
    </tbody>
  </table>



<table class="table">
      <tbody>
        <tr>
          <th scope="row">Cohorts</th>
          <% @course.cohorts.each do |cohort| %>
          <td><%= cohort.name %> </td>
          <% end %>
      </tr>
      </tbody>
      </table>