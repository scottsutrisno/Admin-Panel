<h1>Teachers</h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <section class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Education</th>
            <th>Salary</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
            <tr>
              <td><%= @teachers.first_name %></td>
              <td><%= @teachers.last_name %></td>
              <td><%= @teachers.age %></td>
              <td><%= @teachers.education %></td>
              <td class="btn btn-dark"><%= link_to 'Edit', edit_teacher_path(@teachers) %></td>
              <td class="btn btn-danger"><%= link_to 'Destroy', @teachers, method: :delete, data: { confirm: 'FoSho?' } %></td>
            </tr>
        </tbody>
      </table>
    </div>