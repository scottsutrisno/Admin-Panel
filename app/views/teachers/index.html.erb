<h1>Teachers</h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <section class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Education</th>
            <th>Salary</th>
              </tr>
        </thead>

        <tbody>
          <% @teachers.each do |teacher| %>
            <tr>
              <td><%= teacher.first_name %></td>
              <td><%= teacher.last_name %></td>
              <td><%= teacher.age %></td>
              <td><%= teacher.education %></td>
              <td><%= teacher.salary %></td>
              <td class="btn btn-dark"><%= link_to 'Show', teacher %></td>
              <td class="btn btn-dark"><%= link_to 'Edit', edit_teacher_path(teacher) %></td>
              <td class="btn btn-danger"><%= link_to 'Annihilate', teacher, method: :delete, data: { confirm: 'FoSho?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <button type="button" class="btn btn-dark"><%= link_to 'New Teacher', new_teacher_path %></button>
    </div>