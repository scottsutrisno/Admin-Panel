<h1>Students</h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <section class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Education</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>

            <tr>
              <td><%= @students.first_name %></td>
              <td><%= @students.last_name %></td>
              <td><%= @students.age %></td>
              <td><%= @students.education %></td>
              <td class="btn btn-dark"><%= link_to 'Edit', edit_student_path(@students) %></td>
              <td class="btn btn-danger"><%= link_to 'Destroy', @students, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>

        </tbody>
      </table>
    </div>