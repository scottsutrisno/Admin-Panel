<h1>Students</h1>
  <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
    <section class="table-responsive">
      <table class="table table-striped table-sm">
        <thead>
          <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Age</th>
            <th>Education</th>

          </tr>
        </thead>

        <tbody>
          <% @students.each do |student| %>
            <tr>
              <td><%= student.first_name %></td>
              <td><%= student.last_name %></td>
              <td><%= student.age %></td>
              <td><%= student.education %></td>
              <td class="btn btn-dark"><%= link_to 'Show', student %></td>
              <td class="btn btn-dark"><%= link_to 'Edit', edit_student_path(student) %></td>
              <td class="btn btn-danger"><%= link_to 'Annihilate', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    <button type="button" class="btn btn-dark"><%= link_to 'New Student', new_student_path %></button>
    </div>